<%- model_class = Stack -%>
<div class="page-header">
  <h1><%=t '.title', :default => Stack %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:environment_type) %></th>
      <th><%= model_class.human_attribute_name(:environment) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @stacks.each do |stack| %>
      <tr>
        <td><%= stack.id %></td>
        <td><%= stack.name %></td>
        <td><%= stack.environment_type %></td>
        <td><%= stack.environment %></td>
        <td><%=l stack.created_at, format: :long %></td>
        <td>
          <%= link_to stack_path(stack), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to stack_path(stack), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_stack_path,
            :class => 'btn btn-primary' %>
