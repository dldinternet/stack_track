<%= simple_form_for(@stack) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :environment_type %>
    <%= f.association :account %>
    <%= f.input :environment %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
