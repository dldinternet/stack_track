<%- model_class = Stack -%>
<div class="page-header">
  <h1><%=t '.title', :default => Stack %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @stack.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:environment_type) %></dt>
      <dd><pre class="prettyprint"><%= @stack.environment_type %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:environment) %></dt>
      <dd><pre class="prettyprint"><%= @stack.environment %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              stacks_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_stack_path(@stack), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              stack_path(@stack),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

